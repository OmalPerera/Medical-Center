@model IEnumerable<SUSL_Medical_Center.tb_student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div ng-app="stuApp">
    <div ng-controller="stuctrl">
        <table class="table table-bordered">
            <tr>
                <th>
                    col_one
                </th>
                <th>
                    col_second
                </th>
                <th>
                    col_three
                </th>
                <th>
                    col_four
                </th>
            </tr>
            <tr ng-repeat="astu in stuScope">
                <td>{{astu.stu_id}}</td>
                <td>{{astu.stu_reg_number}}</td>
                <td>{{astu.stu_first_name}}</td>
                <td>{{astu.stu_last_name}}</td>
            </tr>
        </table>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/app/stuController.js"></script>
}

